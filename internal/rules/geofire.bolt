//
// geofire.bolt
//

path /geoUsers {
  read() { true }
  index() { 'g' }
  /{user} is Geofire {
    write() { isMe(key()) }
  }
}

path /geoPosts {
  read() { true }
  index() { 'g' }
  /{post} is Geofire {
    write() { amAuthor(key()) }
  }
}

type Geofire {
  g: GeoHash
  l: GeoLocation
}

type GeoHash {
  validate() { this.length > 0 && this.length <= 22 }
}

type GeoLocation {
  '0': Latitude
  '1': Longitude
}

type Latitude extends Number {
  validate() { this >= -90 && this <= 90 }
}
type Longitude extends Number {
  validate() { this >= -180 && this <= 180 }
}
